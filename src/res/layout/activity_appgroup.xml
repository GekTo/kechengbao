<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:orientation="vertical"
    android:layout_height="fill_parent">
    <!-- 中间动态加载View -->
    <LinearLayout android:orientation="vertical"
    	  android:measureAllChildren="true" android:id="@+id/containerBody"
        android:layout_weight="1" android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    </LinearLayout>
    <LinearLayout android:background="@android:color/holo_blue_bright"
        android:layout_gravity="bottom" android:orientation="horizontal"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- 功能模块按钮1 -->
            <ImageView android:id="@+id/btnModule1" android:src="@mipmap/buttons_1"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp" android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="返回"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
         </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- 功能模块按钮2 -->
            <ImageView android:id="@+id/btnModule2" android:src="@mipmap/buttons_2"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp" android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="章节"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- 功能模块按钮3 -->
            <ImageView android:id="@+id/btnModule3" android:src="@mipmap/buttons_3"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp" android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView android:text="答疑"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!-- 功能模块按钮4 -->
            <ImageView android:id="@+id/btnModule4" android:src="@mipmap/buttons_4"
                android:layout_gravity="center"
                android:layout_marginLeft="7dp" android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp" android:layout_width="wrap_content"
                android:alpha="128"
                android:layout_height="wrap_content" />
            <TextView android:text="通知"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
